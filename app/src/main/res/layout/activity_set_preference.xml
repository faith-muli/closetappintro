<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="program.com.closetappintro.SetPreference"
    android:weightSum="1">



<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_weight="0.1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MALE"
        android:id="@+id/radioButton1" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MALE"
        android:id="@+id/radioButton2" />
</LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Top SIZE"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="0.18">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XS"
            android:id="@+id/radioButton3" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/radioButton5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton3"
            android:layout_toEndOf="@+id/radioButton3" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/radioButton4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton5"
            android:layout_toEndOf="@+id/radioButton5" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:id="@+id/radioButton6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton4"
            android:layout_toEndOf="@+id/radioButton4" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:id="@+id/radioButton7"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton8"
            android:layout_toEndOf="@+id/radioButton8" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXL"
            android:id="@+id/radioButton8"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton6"
            android:layout_toEndOf="@+id/radioButton6" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Size"
        android:textSize="25dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="0.18">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XS"
            android:id="@+id/radioButton9" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/radioButton10"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton9"
            android:layout_toEndOf="@+id/radioButton9" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/radioButton11"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton10"
            android:layout_toEndOf="@+id/radioButton10" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:id="@+id/radioButton12"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton11"
            android:layout_toEndOf="@+id/radioButton11" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:id="@+id/radioButton13"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton12"
            android:layout_toEndOf="@+id/radioButton12" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXL"
            android:id="@+id/radioButton14"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton13"
            android:layout_toEndOf="@+id/radioButton13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOE SIZE:UK  "
            android:textSize="25dp"
            android:id="@+id/textshoe"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="14"

            android:layout_toRightOf="@+id/textshoe"/>
    </RelativeLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="SUBMIT"
        android:textSize="25dp"
        android:id="@+id/submitbbtn"
        android:layout_marginTop="10dp"
        android:background="#FF6B53"/>

</LinearLayout>
