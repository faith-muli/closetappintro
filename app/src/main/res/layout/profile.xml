<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"


        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:src="@drawable/imagecard1"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:text="Diana's \n Closet"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />




    </GridLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00BCD4">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="10 \n OUFITS"
                android:padding="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="80 \n FOLLOWERS"
                android:padding="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="50 \n FOLLOWING"
                android:padding="10dp"/>
        </TableRow>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/photo3"
                android:layout_marginRight="16dp"
                android:src="@drawable/handbag"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name3"
                android:text=" Handbag"
                android:layout_toRightOf="@+id/photo3"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/follow3"
                android:text="kshs 2000"
                android:textSize="20dp"
                android:background="#FF6B53"
                android:layout_toRightOf="@+id/photo3"
                android:layout_below="@+id/name3"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/photoshoeoe"
                android:layout_marginRight="16dp"
                android:src="@drawable/quipid"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameshoe"
                android:text=" Handbag"
                android:layout_toRightOf="@+id/photoshoeoe"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/follow6"
                android:text="kshs 2000"
                android:textSize="20dp"
                android:background="#FF6B53"
                android:layout_toRightOf="@+id/photoshoeoe"
                android:layout_below="@+id/nameshoe"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>









</LinearLayout>
